extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Project title
        h1= title

        //- Project description
        p.lead.text-light= desc

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- Technologies used
        ul
          each tech in techs
            li= tech

        //- Demo & Source Code
        a.button.expanded(href=`${live}`) Live Demo
        a.button.expanded(href=`${source}`) GitHub Repo
    
    //- Images
    each image in images
      img.image(src=`${image}`)